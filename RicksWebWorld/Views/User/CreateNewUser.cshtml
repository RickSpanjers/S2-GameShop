@{
	ViewData["Title"] = "CreateNewUser";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RicksWebWorld.ViewModels.UserRoleViewModel

<div class="container">
	<div class="wrapper">
		<div class="form-signin">
			<h3 class="form-signin-heading">Make a new account for WebWorld</h3>
			<hr class="colorgraph"><br>
			<form asp-controller="Mail" asp-action="SendEmailConfirmation" method="post">
				<input type="text" asp-for="FirstName" placeholder="Firstname" class="input-login" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
				<input type="text" asp-for="LastName" placeholder="Lastname" class="input-login" />
				<span asp-validation-for="LastName" class="text-danger"></span>
				<input type="text" asp-for="Email" placeholder="E-mail" class="input-login" />
				<span asp-validation-for="Email" class="text-danger"></span>
				<input type="text" asp-for="Username" placeholder="Username" class="input-login" />
				<span asp-validation-for="Username" class="text-danger"></span>
				<input type="password" asp-for="Password" placeholder="Password" class="input-login" />
				<span asp-validation-for="Password" class="text-danger"></span>
				<input type="text" asp-for="Address" placeholder="Address" class="input-login" />
				<span asp-validation-for="Address" class="text-danger"></span>
				<input type="text" asp-for="Zipcode" placeholder="Zipcode" class="input-login" />
				<span asp-validation-for="Zipcode" class="text-danger"></span>
				<input type="text" asp-for="Place" placeholder="Place" class="input-login" />
				<span asp-validation-for="Place" class="text-danger"></span>
				<button type="submit" class="btn btn-primary btn-login">Create new account</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}