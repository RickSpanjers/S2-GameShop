@{
	ViewData["Title"] = "Reset Password";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RicksWebWorld.ViewModels.PasswordResetViewModel

<div class="container">
	<div class="wrapper">
		<div class="form-signin">
			<h3 class="form-signin-heading">Make a new account for WebWorld</h3>
			<hr class="colorgraph"><br>
			<form asp-controller="User" asp-action="ResetThePassword" method="post">

				<label>Username</label>
				<input type="text" asp-for="Username" placeholder="Username" disabled="disabled" class="input-login" />
				<span asp-validation-for="Username" class="text-danger"></span>

				<label>Email</label>
				<input type="text" asp-for="Email" placeholder="E-mail" disabled="disabled" class="input-login" />
				<span asp-validation-for="Email" value class="text-danger"></span>

				<label>New password</label>
				<input type="password" asp-for="Password" placeholder="Password" class="input-login" />
				<span asp-validation-for="Password" class="text-danger"></span>

				<label>Repeat new password</label>
				<input type="password" asp-for="PasswordRepeat" placeholder="Password Repeat" class="input-login" />
				<span asp-validation-for="PasswordRepeat" class="text-danger"></span>

				<input type="hidden" value="@Model.Email" name="UserToEdit" />
				<button type="submit" class="btn btn-primary btn-login">Reset</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}